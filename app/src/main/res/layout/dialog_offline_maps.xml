<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F8FAFF"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="ðŸ—ºï¸ Offline Mape"
        android:textColor="#1A237E"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- No Maps Message -->
    <TextView
        android:id="@+id/tvNoMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="32dp"
        android:text="ðŸ“­ Nema preuzetih offline mapa"
        android:textColor="#757575"
        android:textSize="14sp"
        android:textAlignment="center"
        android:visibility="gone" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOfflineMaps"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:clipToPadding="false" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Download New Button -->
        <Button
            android:id="@+id/btnDownloadNew"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="#E3F2FD"
            android:text="ðŸ“¥ Preuzmi Novu"
            android:textColor="#0D47A1"
            android:textSize="14sp" />

        <!-- Close Button -->
        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="#F5F5F5"
            android:text="âŒ Zatvori"
            android:textColor="#5A5A5A"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A1A2E"
    android:padding="8dp">

    <!-- Dialog Title -->
<TextView
android:id="@+id/tvDialogTitle"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_margin="16dp"
android:text="ðŸ“Œ Upravljanje TaÄkama"
android:textColor="#FFFFFF"
android:textSize="18sp"
android:textStyle="bold"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />

    <!-- Counter -->
<TextView
android:id="@+id/tvPointsCount"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="16dp"
android:background="#2D3047"
    android:paddingHorizontal="12dp"
    android:paddingVertical="4dp"
    android:text="0 taÄaka"
    android:textColor="#A0A0FF"
    android:textSize="12sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Divider -->
<View
android:id="@+id/divider"
android:layout_width="0dp"
android:layout_height="1dp"
android:layout_marginHorizontal="16dp"
android:layout_marginTop="8dp"
android:background="#4048C9"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvDialogTitle" />

    <!-- RecyclerView - DODAJ OVAJ ATRIBUT -->
<androidx.recyclerview.widget.RecyclerView
android:id="@+id/recyclerViewPoints"
android:layout_width="0dp"
android:layout_height="280dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:padding="4dp"
    android:background="#1E1E2E"
    app:layout_constraintBottom_toTopOf="@id/btnSelectAll"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/divider" />

    <!-- Select All Button -->
<Button
android:id="@+id/btnSelectAll"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginStart="16dp"
android:layout_marginTop="8dp"
android:layout_marginBottom="16dp"
android:background="#2D3047"
android:text="â˜‘ï¸ Selektuj sve"
android:textColor="#A0A0FF"
app:layout_constraintBottom_toTopOf="@id/buttonContainer"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@id/recyclerViewPoints" />

    <!-- Button Container -->
<LinearLayout
android:id="@+id/buttonContainer"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginHorizontal="16dp"
android:layout_marginBottom="16dp"
android:orientation="horizontal"
android:weightSum="2"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent">

<!-- Delete Button -->
<Button
    android:id="@+id/btnDeleteSelected"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_weight="1"
    android:layout_marginEnd="8dp"
    android:background="#FF3B5C"
android:text="ðŸ—‘ï¸ ObriÅ¡i"
android:textColor="#FFFFFF"
android:textStyle="bold" />

<!-- Cancel Button -->
<Button
    android:id="@+id/btnCancel"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_weight="1"
    android:layout_marginStart="8dp"
    android:background="#2D3047"
    android:text="âŒ Zatvori"
    android:textColor="#A0A0FF" />
</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:contentPadding="4dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="12dp">

<!-- Checkbox -->
<CheckBox
    android:id="@+id/checkbox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:buttonTint="#2196F3" />  <!-- PLAVA -->

<!-- Point Icon -->
<ImageView
    android:id="@+id/ivPointIcon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginEnd="12dp"
    android:src="@drawable/ic_point_blue"
    android:tint="#2196F3" />

<!-- Point Info -->
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPointName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naziv taÄke"
        android:textColor="#212121"
    android:textSize="16sp"
    android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCoordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="44.123456, 20.654321"
        android:textColor="#757575"
    android:textSize="12sp" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="01.01.2024 12:00"
        android:textColor="#9E9E9E"
    android:textSize="10sp" />
</LinearLayout>

<!-- Distance -->
<TextView
    android:id="@+id/tvDistance"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:background="#E3F2FD"
android:paddingHorizontal="8dp"
android:paddingVertical="4dp"
android:text="150m"
android:textColor="#1976D2"
android:textSize="10sp" />
</LinearLayout>
    </androidx.cardview.widget.CardView>